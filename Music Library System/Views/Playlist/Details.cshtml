@model Music_Library_System.Models.Playlist

@{
    ViewData["Title"] = Model.Name;
    var songs = ViewBag.Songs as List<Music_Library_System.Models.Song>;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-4">
            <img src="@Model.CoverImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-8">
            <h1 class="mb-2">@Model.Name</h1>
            <p class="text-muted">@Model.Description</p>
            <p>@Model.SongCount songs</p>
            <div class="d-flex gap-2">
                <button class="btn btn-success">
                    <i class="bi bi-play-fill me-1"></i> Play All
                </button>
                <button class="btn btn-outline-light">
                    <i class="bi bi-shuffle me-1"></i> Shuffle
                </button>
                <button class="btn btn-outline-light">
                    <i class="bi bi-pencil me-1"></i> Edit
                </button>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col"></th>
                    <th scope="col">Title</th>
                    <th scope="col">Artist</th>
                    <th scope="col">Album</th>
                    <th scope="col">Duration</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < songs.Count; i++)
                {
                    var song = songs[i];
                    <tr>
                        <th scope="row">@(i + 1)</th>
                        <td>
                            <img src="@song.CoverImageUrl" alt="@song.Title" class="img-fluid" style="width: 40px; height: 40px;">
                        </td>
                        <td>@song.Title</td>
                        <td>@song.ArtistName</td>
                        <td>@song.AlbumTitle</td>
                        <td>@song.Duration</td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" id="dropdownMenuButton@(song.Id)" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton@(song.Id)">
                                    <li><a class="dropdown-item" href="#">Remove from Playlist</a></li>
                                    <li><a class="dropdown-item" href="#">Like</a></li>
                                    <li><a class="dropdown-item" href="#">View Artist</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>