@model List<Music_Library_System.Models.Playlist>

@{
    ViewData["Title"] = "My Playlists";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-4">
        <h1>My Playlists</h1>
        <button class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Create Playlist
        </button>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        @foreach (var playlist in Model)
        {
            <div class="col">
                <div class="card h-100 bg-dark text-white">
                    <img src="@playlist.CoverImageUrl" class="card-img-top" alt="@playlist.Name">
                    <div class="card-body">
                        <h5 class="card-title">@playlist.Name</h5>
                        <p class="card-text">@playlist.Description</p>
                        <p class="card-text">
                            <small class="text-muted">@playlist.SongCount songs</small>
                        </p>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("Details", "Playlist", new { id = playlist.Id })" class="btn btn-outline-light btn-sm">View Playlist</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>