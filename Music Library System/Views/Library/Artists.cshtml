@model List<Music_Library_System.Models.Artist>

@{
    ViewData["Title"] = "Artists";
}

<div class="container mt-4">
    <h1 class="mb-4">Artists</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        @foreach (var artist in Model)
        {
            <div class="col">
                <div class="card h-100 bg-dark text-white">
                    <img src="@artist.ImageUrl" class="card-img-top" alt="@artist.Name">
                    <div class="card-body">
                        <h5 class="card-title">@artist.Name</h5>
                        <p class="card-text">
                            <small>
                                <span class="badge bg-secondary me-2">@artist.Albums?.Count Albums</span>
                                <span class="badge bg-secondary">@artist.Songs?.Count Songs</span>
                            </small>
                        </p>
                        <p class="card-text text-secondary">
                            <small>@artist.Genre • @artist.Country</small>
                        </p>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="btn btn-outline-light btn-sm">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>