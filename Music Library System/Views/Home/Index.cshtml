@{
    ViewData["Title"] = "Home";
    var session = Context.Session.GetString("UserSession");
    var isLoggedIn = session != null;
}

<style>
    .hero-section {
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
                    url('https://images.unsplash.com/photo-1511671782779-c97d3d27a1d4?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80');
        background-size: cover;
        background-position: center;
        height: 500px;
        display: flex;
        align-items: center;
        position: relative;
    }

    .hero-content {
        color: white;
        text-align: center;
        padding: 2rem;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .hero-subtitle {
        font-size: 1.5rem;
        margin-bottom: 2rem;
        color: #FF6B00;
    }

    .featured-section {
        padding: 4rem 0;
        background: #000000;
    }

    .section-title {
        color: #FF6B00;
        font-size: 2rem;
        margin-bottom: 2rem;
        font-weight: bold;
    }

    .music-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        padding: 1rem;
        transition: transform 0.3s ease;
        border: 1px solid rgba(255, 107, 0, 0.2);
    }

    .music-card:hover {
        transform: translateY(-5px);
        background: rgba(255, 107, 0, 0.1);
    }

    .music-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 1rem;
    }

    .music-card h3 {
        color: white;
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .music-card p {
        color: #FF6B00;
        font-size: 0.9rem;
    }

    .play-button {
        background: #FF6B00;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        transition: background 0.3s ease;
    }

    .play-button:hover {
        background: #FF8533;
        color: white;
    }

    .category-pill {
        background: rgba(255, 107, 0, 0.1);
        color: #FF6B00;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        margin: 0.5rem;
        display: inline-block;
        transition: background 0.3s ease;
    }

    .category-pill:hover {
        background: rgba(255, 107, 0, 0.2);
        color: #FF6B00;
        text-decoration: none;
    }

    .trending-section {
        background: linear-gradient(45deg, #000000, #1a1a1a);
        padding: 4rem 0;
    }

    .trending-item {
        display: flex;
        align-items: center;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        margin-bottom: 1rem;
        transition: background 0.3s ease;
    }

    .trending-item:hover {
        background: rgba(255, 107, 0, 0.1);
    }

    .trending-item img {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        margin-right: 1rem;
    }

    .trending-info {
        flex-grow: 1;
    }

    .trending-info h4 {
        color: white;
        margin: 0;
    }

    .trending-info p {
        color: #FF6B00;
        margin: 0;
        font-size: 0.9rem;
    }

    .welcome-message {
        color: #FF6B00;
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }

    .user-stats {
        background: rgba(255, 107, 0, 0.1);
        border-radius: 10px;
        padding: 1rem;
        margin-bottom: 2rem;
    }

    .user-stats-item {
        text-align: center;
        padding: 1rem;
    }

    .user-stats-number {
        color: #FF6B00;
        font-size: 2rem;
        font-weight: bold;
    }

    .user-stats-label {
        color: white;
        font-size: 0.9rem;
    }
</style>

@if (!isLoggedIn)
{
    <div class="hero-section">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">Welcome to SoundCloud</h1>
                <p class="hero-subtitle">Discover, Stream, and Share Your Music</p>
                <div class="mt-4">
                    <a href="/Account/Login" class="btn btn-primary btn-lg me-3" style="background: #FF6B00; border: none;">Sign In</a>
                    <a href="/Account/Register" class="btn btn-outline-light btn-lg">Sign Up</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="hero-section">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">Welcome Back!</h1>
                <p class="welcome-message">Continue your musical journey</p>
                <div class="user-stats">
                    <div class="row">
                        <div class="col-md-4 user-stats-item">
                            <div class="user-stats-number">0</div>
                            <div class="user-stats-label">Tracks</div>
</div>
                        <div class="col-md-4 user-stats-item">
                            <div class="user-stats-number">0</div>
                            <div class="user-stats-label">Playlists</div>
        </div>
                        <div class="col-md-4 user-stats-item">
                            <div class="user-stats-number">0</div>
                            <div class="user-stats-label">Following</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

