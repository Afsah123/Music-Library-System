@{
    ViewData["Title"] = "Home";
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="bg-black rounded-3 p-4 mb-4 position-relative">
            <div class="d-flex align-items-center">
                <img src="https://picsum.photos/id/30/300/300" class="rounded-3 me-4" style="height: 220px;" alt="Featured Album" />
                <div>
                    <span class="badge bg-danger mb-2">FEATURED ALBUM</span>
                    <h1 class="display-4">After Hours</h1>
                    <h3 class="text-secondary">The Weeknd</h3>
                    <p class="lead text-light-50">Released March 20, 2020 • 14 songs • 56 min</p>
                    <div class="mt-3">
                        <button class="btn btn-danger me-2"><i class="bi bi-play-fill"></i> Play</button>
                        <button class="btn btn-outline-light me-2"><i class="bi bi-plus"></i> Add to Library</button>
                        <button class="btn btn-outline-light"><i class="bi bi-three-dots"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card bg-dark text-light mb-4 border-0">
    <div class="card-header bg-black">
        <div class="d-flex justify-content-between align-items-center">
            <h3>Recently Played</h3>
            <a href="#" class="text-light">View All</a>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="row g-4">
            @for (int i = 1; i <= 6; i++)
            {
                <div class="col-md-2">
                    <div class="card bg-black text-light border-0">
                        <img src="https://picsum.photos/id/@(30 + i)/200/200" class="card-img-top rounded-3" alt="Album Cover">
                        <div class="card-body p-2">
                            <h6 class="card-title mb-0">Song Title @i</h6>
                            <p class="card-text small text-secondary mb-0">Artist Name</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="card bg-dark text-light mb-4 border-0">
    <div class="card-header bg-black">
        <div class="d-flex justify-content-between align-items-center">
            <h3>Made For You</h3>
            <a href="#" class="text-light">View All</a>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="row g-4">
            @for (int i = 1; i <= 6; i++)
            {
                <div class="col-md-2">
                    <div class="card bg-black text-light border-0">
                        <img src="https://picsum.photos/id/@(40 + i)/200/200" class="card-img-top rounded-3" alt="Playlist Cover">
                        <div class="card-body p-2">
                            <h6 class="card-title mb-0">Daily Mix @i</h6>
                            <p class="card-text small text-secondary mb-0">Based on your listening</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="card bg-dark text-light mb-4 border-0">
    <div class="card-header bg-black">
        <div class="d-flex justify-content-between align-items-center">
            <h3>Top Charts</h3>
            <a href="#" class="text-light">View All</a>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="list-group list-group-flush bg-dark rounded-3">
            @for (int i = 1; i <= 5; i++)
            {
                <div class="list-group-item bg-black text-light border-secondary d-flex align-items-center">
                    <span class="me-3 fs-5">@i</span>
                    <img src="https://picsum.photos/id/@(50 + i)/60/60" class="rounded me-3" alt="Song Cover">
                    <div class="me-auto">
                        <h6 class="mb-0">Popular Song @i</h6>
                        <p class="mb-0 text-secondary">Popular Artist @i</p>
                    </div>
                    <span class="text-secondary me-3">3:45</span>
                    <button class="btn btn-outline-light btn-sm rounded-circle"><i class="bi bi-three-dots"></i></button>
                </div>
            }
        </div>
    </div>
</div>

<div class="alert alert-info bg-dark text-info border border-info mb-4">
    <i class="bi bi-info-circle me-2"></i> This is the home page of the Music Library System. It displays featured content, recently played songs, personalized recommendations, and trending music.
</div>